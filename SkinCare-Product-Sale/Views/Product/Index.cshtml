@model IEnumerable<Data_Access_Layer.Entities.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm sản phẩm</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Mô tả</th>
            <th>Danh mục</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td>@item.CategoryId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
